{% extends 'admin/base.html.twig' %}

{% block title %}Edit artist
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-4 ">
			<div class="position-sticky top-0">
				<a class="d-inline-block mb-4 btn btn-primary"
				   href="{{ path('admin_artist_index') }}">
					<i class="bi bi-arrow-left"></i> Retour à la liste des artistes
				</a>
				{% if artist.photo %}
					<img src="{{ vich_uploader_asset(artist) }}" class="card-img img-fluid mb-4" >
				{% endif %}
				<div class="d-flex justify-content-between align-items-center">
					<p class="me-auto fs-3">Édition de l'artiste</p>

					<img src="{{ asset('build/images/flags/' ~ app.request.get('locale') ~ '.png') }}"
						 alt="{{ app.request.locale }}">
				</div>
				<h1>
					{{ artist.name }}
				</h1>

			</div>
		</div>
		<div class="col-md-8">

			{{ include('admin/artist/_form.html.twig', {
				'button_save_label': 'Sauvegarder',
			}) }}
			<div class="d-flex justify-content-between">
				<div class="me-auto">
					{{ include('admin/artist/_delete_form.html.twig') }}
				</div>
				{% if (app.request.get('locale') != artist.getDefaultLocale) %}
					{{ include('admin/artist/_delete_translation_form.html.twig') }}
				{% endif %}
			</div>
		</div>
	</div>

{% endblock %}
